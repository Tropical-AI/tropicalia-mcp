{
  "name": "tropicalia-mcp",
  "version": "0.1.2",
  "description": "Tropicalia MCP server for AI assistants",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "tropicalia-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "tropicalia",
    "ai",
    "search"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "express": "^5.2.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
